{
  "name": "starter-lit-with-tailwind",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:all watch:all",
    "start": "vite --host",
    "build": "vite build",
    "preview": "vite preview dist",
    "lit:dev": "vite",
    "idr:build": "PATH=$PATH:~/.pack/bin && make --directory idr",
    "idr:watch": "chokidar 'idr/src/**/*.idr' -c 'pnpm run idr:build'",
    "watch:all": "pnpm run idr:watch",
    "dev:all": "run-s idr:build lit:dev",
    "lint": "eslint src --fix"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.8.0",
    "eslint-config-galex": "^3.6.3",
    "lit": "^2.1.2",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "vite": "^2.7.13"
  }
}
